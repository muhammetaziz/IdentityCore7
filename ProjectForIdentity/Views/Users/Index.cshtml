@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<a class="btn btn-success float-end" asp-action="Create">Kullanıcı Ekleme</a>
<br />
<br />
<br />
<table class="table table-bordered">
    <thead>

        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th width="250px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>@item.Id</td>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>
                <a class="btn btn-primary">Düzenle</a>
                <a class="btn btn-danger">Sil</a>
                <a class="btn btn-secondary">Detaylar</a>
            </td>
        </tr>
        }
    </tbody>
</table>